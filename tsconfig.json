{
    "compilerOptions": {
      "target": "es6",                         
      "module": "commonjs",                     
      "outDir": "./dist",                       
      "rootDir": "./src",                       
      "strict": true,                           
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true, 
      "moduleResolution": "node",               
      "resolveJsonModule": true,               
      "noImplicitAny": true,                    
      "noImplicitReturns": true,                
      "removeComments": true     ,
                    
    },
    "include": ["src/**/*",
    "declarations.d.ts"
  ],                    
    "exclude": ["node_modules"]                 
  }
  